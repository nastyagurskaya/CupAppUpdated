@model IEnumerable<CupApp.Models.Cup>
@{
    ViewBag.Title = "View All";
}
<div >
    <table class="table table-striped table-condensed" id="cupTable">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CupType)
            </th>
            <th> @Html.DisplayNameFor(model => model.Country) </th>
            <th> Image </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CupType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country.CountryName)
                </td>
                <td> <img id="myimage" src="@Url.Action("GetImage", new { id = item.CupId})" width="100" height="70" /></td>
                <td>
                    <a class="btn btn-primary btn-sm" onclick="Edit('@Url.Action("AddOrEdit", "Cups", new { id = @item.CupId })')"><i class="fa fa-pencil fa-lg"></i></a>
                    <a class="btn btn-danger btn-sm" onclick="Delete('@Url.Action("Delete", "Cups", new { id = @item.CupId })')"><i class="fa fa-trash fa-lg"></i></a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>